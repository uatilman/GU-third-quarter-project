<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <!--
    persistence-unit имя для JAVA см пакет DAO
    JTA - автоматическое управление транзакциями
    jta-data-source - jndi-name из standalone.xml

    hibernate.hbm2ddl.auto - автозоздание таблиц по классам с анатоциями
    hibernate.dialect - на каком диалекте, универсальномя языке для java для общения с бд
    -->

    <persistence-unit name="tilman-persistence-unit" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/TILMAN-DS</jta-data-source>
        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
        </properties>
    </persistence-unit>
</persistence>